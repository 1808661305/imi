{
    "name": "yurunsoft/imi",
    "type": "library",
    "license": "MulanPSL-1.0",
    "description": "imi 是基于 PHP Swoole 的高性能协程应用开发框架，它支持 HttpApi、WebSocket、TCP、UDP、MQTT 服务的开发。",
    "require": {
        "php": ">=7.4",
        "ext-swoole": ">=4.5",
        "yurunsoft/swoole-co-pool": "^1.1.0",
        "yurunsoft/doctrine-annotations": "^1.73.0",
        "psr/log": "~1.0",
        "psr/container": "~1.0",
        "psr/http-message": "~1.0",
        "psr/http-server-middleware": "~1.0",
        "psr/simple-cache": "~1.0",
        "vlucas/phpdotenv": "~4.1",
        "symfony/console": "^5.1",
        "symfony/event-dispatcher": "^5.1"
    },
    "require-dev": {
        "yurunsoft/ide-helper": "~1.0",
        "phpunit/phpunit": ">=8"
    },
    "autoload": {
        "psr-4" : {
            "Imi\\" : "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Imi\\Test\\": "tests/unit/",
            "Imi\\Swoole\\": "src/Components/Swoole/src/",
            "Imi\\Fpm\\": "src/Components/Fpm/src/"
        }
    },
    "prefer-stable": true,
    "bin": [
        "src/Cli/bin/imi-cli"
    ],
    "scripts": {
      "test": "./tests/run",
      "install-test": "php --ri swoole && composer install && cd ./tests && composer install && cd ../ && composer test"
    },
    "extra": {
        "ide-helper": {
            "list": [
                "swoole",
                "redis"
            ]
        }
    }
}
